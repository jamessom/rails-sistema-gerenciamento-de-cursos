<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<table>
  <thead>
    <tr>
      <th>Trainer</th>
      <th>Course</th>
      <th>Initial date</th>
      <th>End date</th>
      <th>Workload</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.Trainer %></td>
        <td><%= team.Course %></td>
        <td><%= team.initial_date %></td>
        <td><%= team.end_date %></td>
        <td><%= team.workload %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


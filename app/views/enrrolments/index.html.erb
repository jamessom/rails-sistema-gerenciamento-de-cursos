<h1>Listing Enrrolments</h1>

<table>
  <thead>
    <tr>
      <th>Date enrrolment</th>
      <th>Student</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrrolments.each do |enrrolment| %>
      <tr>
        <td><%= enrrolment.date_enrrolment %></td>
        <td><%= enrrolment.Student %></td>
        <td><%= enrrolment.Team %></td>
        <td><%= link_to 'Show', enrrolment %></td>
        <td><%= link_to 'Edit', edit_enrrolment_path(enrrolment) %></td>
        <td><%= link_to 'Destroy', enrrolment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

